{
  "manifest_version": 3,
  "name": "AetherPay",
  "description": "AetherPay is a non-custodial Ethereum wallet for managing accounts and interacting with DApps.",
  "version": "0.1.0",

  "action": {
    "default_title": "AetherPay",
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
